
import "std/math.znn";

export struct color {
  int r;
  int g;
  int b;
};

export color implicit_copy(color*) = default;

int clamp(int amount) {
  return max(0, min(255, amount));
}

export color lighter(color* col, int amount) {
  return color(clamp(col->r + amount), clamp(col->g + amount), clamp(col->b + amount));
}
