export [@ui_element]
struct key_handler {
  key_event event;
};

export bool onKeyEvent(key_handler* k, UIContext context, rectangle* rect, key_event* event) {
  if (*event == k->event)
    if (const callback = context.data->cast_to<box<UICallback>>()) {
      (**callback)->invoke();
      return true;
    }
  return false;
}

