
export import "vec2.znn";

export enum key_type {
  UP,
  DOWN,
  LEFT,
  RIGHT,
  ESCAPE,
  SPACE,
  F1,
  A,
  W,
  S,
  D,
  B,
};

export enum key_event_type {
  DOWN,
  UP,
  HELD,
};

export [@auto_equality]
struct key_event {
  key_type key;
  key_event_type type;
};

export enum mouse_event_type {
  LEFT,
  MIDDLE,
  RIGHT,
  JOYSTICK_LEFT,
  JOYSTICK_RIGHT,
};

export struct mouse_event {
  mouse_event_type type;
  vec2 pos;
};

